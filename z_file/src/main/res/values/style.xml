<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ZFile_BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/zfile_base_color</item>
        <item name="colorPrimaryDark">@color/zfile_base_color</item>
        <item name="colorPrimary">@color/zfile_base_color</item>
        <item name="android:windowBackground">@color/zfile_bgcolor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ZFile_Common_Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@drawable/zfile_dialog_shape</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="textEllipsis">
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>

    </style>

    <!--自定义BaseDialog样式-->
    <style name="BaseDialog222" parent="@android:style/Theme.Dialog">
        <!-- 无标题 -->
        <!--自定义BaseDialog样式-->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景缓存颜色 -->
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ZFile_Img_Dialog">
        <item name="android:windowBackground">@color/zfile_black</item>
    </style>

    <style name="ZFile_Select_Folder_Dialog" parent="ZFile_Common_Dialog">
        <item name="android:windowBackground">@color/zfile_white</item>
        <item name="android:windowAnimationStyle">@style/ZFile_Dialog_Anim</item>
    </style>

    <style name="ZFile_Dialog_Anim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/zfile_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/zfile_out_bottom</item>
    </style>

    <style name="ZFile_ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/zfile_white</item>
        <item name="android:textColorPrimary">@color/zfile_white</item>
    </style>

    <style name="ZFile_ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="actionOverflowMenuStyle">@style/ZFile_OverflowMenuStyle</item>
    </style>

    <style name="ZFile_OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="ZFile_ToolbarTitleTextStyle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/zfile_white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
