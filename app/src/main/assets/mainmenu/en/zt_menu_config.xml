<zt-menu>
    <!--####################### Instructions ########################
    File Path:
    /data/data/com.termux/files/home/ZtInfo/main_menu_path.xml
    This file is the configuration file for the ZT left-hand menu bar. It can be modified freely (pay attention to the format; errors may prevent the left bar from displaying correctly).
    To restore defaults, please use the command:
    zt menu reset
    To apply changes immediately after modification, use the command:
    zt menu update or restart the APP.
    ########################### Instructions ########################-->


    <!--Example:
    Group Name:
    <group id="0" name="Common Functions">
        ####################### name ########################
        1.name: The name of the click event.
        Example: name="Switch Source"
        ####################### click ########################
        1.click: Calls a JAVA class internal to ZT.
        Example: click="java:com.termux.zerocore.config.mainmenu.config.SwitchSourceClickConfig"
        2.Or jump to a web page:
        click="jumpUrl:www.baidu.com"
        3.Or execute a shell command:
        click="ztShell:cd ~ && pkg update"
        4.To execute directly, modify this configuration item:
        autoRunShell="true"
        ####################### icon ########################
        Note: This attribute only takes effect if click does NOT start with 'java:'.
        1.icon: The icon. 'application' prefix calls ZT's internal resources, or an absolute path can be provided.
        Example:(
        Absolute path: icon="imgPath:/data/data/com.termux/files/home/ZTinfo/1.png")
        ####################### shell ########################
    </group>-->

    <!--This is just an example. Edit according to your needs. For normal use, you can comment out this menu and then use 'zt menu update' to refresh immediately.-->
    <!--####################### Can be deleted #########################-->
    <group name="Example click event (this grouping can be deleted in the profile)">
        <item tag="customizeTheLeftSidebar"
            name="EditMenu"
            icon="imgPath:/data/data/com.termux/files/home/ZtInfo/edit_menu.png"
            click="ztEditText:/data/data/com.termux/files/home/ZtInfo/main_menu_path.xml" />
        <!--dialog The property can only be effective for click for ztShell
       dialogConfirm for false It Is Not Prompted
        -->
        <item tag="ExecuteTerminalCommands"
            name="ExecutionTerminal"
            icon=""
            dialogConfirm="true"
            dialogTitle="Tips"
            dialogMessage="Do You Want To Execute This Shell Statement"
            autoRunShell="false"
            click="ztShell:cd ~ &amp;&amp; pkg update" />
        <item tag="RedirectURL"
            name="RedirectURL"
            icon=""
            click="jumpUrl:https://www.google.com" />
        <item tag="OccupyAPlaceDoNothing"
            name="PlaceholderMenu"
            icon=""
            click="" />
        <item tag="JumpToInternalActivities"
            name="JumpSettings"
            icon=""
            packageName="com.termux"
            intentData=""
            click="startActivity:com.termux.zerocore.settings.ZtSettingsActivity" />
        <!--intentData property values, currently only support String strings
            key@@value-->
        <item tag="JumpAction"
            name="JumpToAction"
            icon=""
            intentData="data@@com.termux"
            packageName="com.android.settings"
            click="actionActivity:android.settings.WIRELESS_SETTINGS" />
        <!--List
        name@@command,name@@command,name@@command
        && in XML To &amp;&amp;
        -->
        <item tag="list"
            name="list"
            autoRunShell="true"
            listTitle="PleaseSelectACommand"
            click="commands:singleLineCommand@@pkg update,MultiLineCommands@@pkg update &amp;&amp; pkg install vim,InstallGit@@pkg install git" />

        <item tag="OnlineScripting"
            name="OnlineScripting"
            icon=""
            click="shellUrl:https://od.ixcmstudio.cn/on_line_sh/main.json" />

        <item tag="DownloadStation"
            name="DownloadStation"
            icon=""
            click="downloadUrl:https://od.ixcmstudio.cn/repository/main.json" />
        <item tag="OpenTheURLWithinTheApp"
            name="InAppURL"
            icon=""
            activityTitle="Google"
            click="appWebUrl:https://www.google.com" />
    </group>
