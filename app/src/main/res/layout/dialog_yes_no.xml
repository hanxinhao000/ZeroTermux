<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_r_3dp_161823"
    android:orientation="vertical"
    android:padding="5dp">



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
          android:layout_width="20dp"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:src="@mipmap/waring"
          android:layout_height="20dp"/>


      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:id="@+id/dialog_title"
              android:text="提示"
              android:layout_marginTop="6dp"
              android:textColor="#fff"
              android:textSize="16sp" />

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:gravity="center"
              android:id="@+id/dialog_msg"
              android:text="内容"
              android:textColor="#fff"
              android:textSize="14sp" />

          <EditText
              android:layout_width="match_parent"
              android:layout_marginTop="10dp"
              android:textSize="14sp"
              android:textColor="#fff"
              android:id="@+id/input_system_name"
              android:visibility="gone"
              android:hint="请输入新的系统盘名称(new name)"
              android:textColorHint="#aaa"
              android:layout_height="wrap_content"/>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginTop="20dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">



              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="确定"
                  android:padding="10dp"
                  android:id="@+id/dialog_yes"
                  android:background="@drawable/shape_r_3dp_10202f"
                  android:gravity="center"
                  android:textColor="#fff"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:text="取消"
                  android:padding="10dp"
                  android:layout_marginLeft="10dp"
                  android:id="@+id/dialog_no"
                  android:background="@drawable/shape_r_3dp_10202f"
                  android:gravity="center"
                  android:textColor="#fff"
                  android:layout_height="wrap_content"/>


          </LinearLayout>





      </LinearLayout>

  </RelativeLayout>


</LinearLayout>
