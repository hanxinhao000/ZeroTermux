<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2b2b2b"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:id="@+id/title_card"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_553E3E3E"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">




            <EditText
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/color_48baf3"

                android:id="@+id/name_edit"
                android:hint="@string/请输入命令名称"
                android:textColorHint="@color/color_BABABA"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:inputType="text"
                android:layout_above="@+id/boom_rl"
                android:gravity="top|left"
                android:layout_height="40dp"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_553E3E3E"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">




            <EditText
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/color_48baf3"
                android:id="@+id/edit_text"
                android:hint="@string/请输入您要添加的命令"
                android:textColorHint="@color/color_BABABA"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="1000"
                android:gravity="left|top"
                android:layout_marginBottom="10dp"
                android:layout_height="290dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



  <LinearLayout
      android:layout_width="match_parent"
      android:id="@+id/boom_rl"
      android:layout_marginBottom="10dp"
      android:visibility="visible"
      android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"

          android:orientation="vertical"
          android:visibility="visible"
          android:layout_height="wrap_content">


          <RelativeLayout
              android:layout_width="wrap_content"
              android:visibility="invisible"
              android:layout_height="wrap_content">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"

                  android:layout_marginRight="5dp"
                  app:cardElevation="0dp"

                  app:cardBackgroundColor="@color/color_553E3E3E"
                  app:cardCornerRadius="5dp"
                  android:layout_height="38dp">


          <LinearLayout
              android:layout_width="wrap_content"
              android:orientation="horizontal"
              android:gravity="center"
              android:layout_marginLeft="10dp"
              android:layout_marginBottom="8dp"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="match_parent"
                  android:text="@string/自动回车"
                  android:textColor="#fff"
                  android:gravity="center"
                  android:textSize="12sp"
                  android:layout_height="wrap_content"/>
              <Switch
                  android:layout_width="wrap_content"
                  android:paddingTop="8dp"
                  android:checked="true"
                  android:paddingBottom="8dp"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

              </androidx.cardview.widget.CardView>


              <TextView
                  android:layout_width="match_parent"
                  android:text="@string/保存当前配置"
                  android:textColor="#fff"
                  android:visibility="gone"

                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>

          </RelativeLayout>


      </LinearLayout>



      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:id="@+id/commit_ll"
          android:orientation="vertical"
          android:visibility="visible"
          android:layout_height="wrap_content">


          <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

              <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  app:cardElevation="0dp"
                  app:cardBackgroundColor="@color/color_553E3E3E"
                  app:cardCornerRadius="5dp"
                  android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="match_parent"
                      android:text="@string/取消"
                      android:textColor="#fff"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:id="@+id/commit"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:layout_height="wrap_content"/>

              </androidx.cardview.widget.CardView>


              <TextView
                  android:layout_width="match_parent"
                  android:text="@string/保存当前配置"
                  android:textColor="#fff"
                  android:visibility="gone"
                  android:id="@+id/commit_file"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_height="wrap_content"/>

          </RelativeLayout>


      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:orientation="vertical"
          android:layout_height="wrap_content">

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              app:cardElevation="0dp"
              app:cardBackgroundColor="@color/color_553E3E3E"
              app:cardCornerRadius="5dp"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_width="match_parent"
                  android:text="@string/好的"
                  android:textColor="#fff"
                  android:gravity="center"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:id="@+id/start"
                  android:textSize="16sp"
                  android:layout_height="match_parent"/>


          </androidx.cardview.widget.CardView>



      </LinearLayout>

  </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="0dp"
            android:id="@+id/switch_card"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/color_553E3E3E"
            app:cardCornerRadius="5dp"
            android:layout_height="38dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/自动回车"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:paddingTop="8dp"
                    android:id="@+id/switch_btn"
                    android:checked="true"
                    android:paddingBottom="8dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</LinearLayout>
