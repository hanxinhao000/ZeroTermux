<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="false"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/title_mb"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_161823"
                app:cardCornerRadius="3dp"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:id="@+id/zt_title"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:text="Z"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="ero"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:text="T"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="ermux"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/version"
                            android:layout_alignParentRight="true"
                            android:text="@string/版本"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/version"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:id="@+id/eg_tv"
                            android:textSize="15sp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/版本"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_161823"
                app:cardCornerRadius="3dp"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_ffffff"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/局域服务器"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/service_status"
                            android:layout_alignParentRight="true"
                            android:text="@string/正在连接"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_below="@+id/service_status"
                            android:id="@+id/service_eg"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/正在连接"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_161823"
                app:cardCornerRadius="3dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_ffffff"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/本机IP"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/ip_status"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/正在连接"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/data_message_card"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_161823"
                app:cardCornerRadius="3dp"
                android:layout_height="150dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:layout_height="match_parent">
                        <EditText
                            android:layout_width="match_parent"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:background="@null"
                            android:id="@+id/data_message"
                            android:layout_marginTop="5dp"
                            android:text="@string/data_message"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="10dp"
                        android:src="@mipmap/up_down"
                        android:rotation="180"
                        android:layout_margin="2dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:src="@mipmap/up_down"
                        android:layout_margin="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_161823"
                app:cardCornerRadius="3dp"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/qq_group"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:id="@+id/qq_group_tv"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_48baf3"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/telegram_group"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:id="@+id/telegram_group_tv"
                                    android:textStyle="bold"
                                    android:textColor="@color/color_48baf3"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/color_ffffff"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:id="@+id/msg_tv"
                                android:layout_marginTop="5dp"
                                android:layout_alignParentRight="true"
                                android:text="@string/会话窗口在右侧"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </ScrollView>
                    <ImageView
                        android:layout_width="10dp"
                        android:src="@mipmap/up_down"
                        android:rotation="180"
                        android:layout_margin="2dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:src="@mipmap/up_down"
                        android:layout_margin="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_height="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
