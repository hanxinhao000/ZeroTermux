<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_2b2b2b"
    android:id="@+id/layout_menu"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:id="@+id/scrollView_main"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/main_card"
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_55000000"
                app:cardCornerRadius="6dp"
                android:layout_height="wrap_content">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:padding="8dp"
                      android:layout_height="wrap_content">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="25sp"
                              android:text="Z"
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textSize="16sp"
                              android:textStyle="bold"
                              android:text="ero"
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="25sp"
                              android:text="T"
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textSize="16sp"
                              android:textStyle="bold"
                              android:text="ermux"
                              android:layout_height="wrap_content"/>
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content">
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="15sp"
                              android:id="@+id/version"
                              android:text="@string/版本"
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="15sp"
                              android:text=" / "
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="15sp"
                              android:id="@+id/service_status"
                              android:text="@string/正在连接"
                              android:layout_height="wrap_content"/>

                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_marginTop="5dp"
                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_below="@+id/version"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:id="@+id/eg_tv"
                              android:textSize="10sp"
                              android:text="@string/版本"
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="10sp"
                              android:text=" / "
                              android:layout_height="wrap_content"/>
                          <TextView
                              android:layout_width="match_parent"
                              android:textColor="@color/color_ffffff"
                              android:textStyle="bold"
                              android:textSize="10sp"
                              android:id="@+id/service_eg"
                              android:text="@string/正在连接"
                              android:layout_height="wrap_content"/>

                      </LinearLayout>

                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentBottom="true"
                      android:layout_alignParentRight="true"
                      android:orientation="vertical"
                      android:layout_marginRight="10dp">
                      <ImageView
                          android:layout_width="15dp"
                          android:src="@mipmap/up_down"
                          android:rotation="270"
                          android:id="@+id/open_settings"
                          android:layout_height="15dp"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="10dp"/>
                  </LinearLayout>

              </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/ip_card"
                android:layout_marginRight="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_55000000"
                app:cardCornerRadius="6dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:text="IP"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/color_ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:id="@+id/ip_status"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:text="@string/正在连接"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:src="@mipmap/up_down"
                            android:id="@+id/open_image"
                            android:layout_height="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="10dp"/>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:id="@+id/info_card"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/color_55000000"
                app:cardCornerRadius="6dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_ffffff"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:text="INFO"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/qq_group"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:id="@+id/qq_group_tv"
                            android:textStyle="bold"
                            android:textColor="@color/color_48baf3"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/telegram_group"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:textSize="12sp"
                            android:id="@+id/telegram_group_tv"
                            android:textStyle="bold"
                            android:textColor="@color/color_48baf3"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_ffffff"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:id="@+id/msg_tv"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:text="@string/会话窗口在右侧"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_menu_list"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
